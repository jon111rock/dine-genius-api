# API設定
PORT=3000
NODE_ENV=development  # development 或 production

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://dine-vote.firebaseapp.com,https://dine-vote.web.app

# API超時設定（毫秒）
API_TIMEOUT=30000

# Gemini API設定
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase 客戶端設定
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-app-id
VITE_FIREBASE_STORAGE_BUCKET=your-app-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK設定 (用於Vercel部署)
# 注意：這應該是一個JSON字串，在Vercel中應加密儲存
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
FIREBASE_DATABASE_URL=https://your-app-id.firebaseio.com
